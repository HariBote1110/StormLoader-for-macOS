{
  "name": "stormforge",
  "version": "0.3.6",
  "description": "A mod manager for Stormworks.",
  "main": "src/main/app.js",
  "author": "haribote1110",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-updater": "^6.1.1",
    "fs-extra": "^11.2.0",
    "pako": "^2.1.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.haribote1110.stormforge",
    "productName": "StormForge",
    "copyright": "Copyright Â© 2025 HariBote1110",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!build/icon.*"
    ],
    "mac": {
      "identity": null,
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}