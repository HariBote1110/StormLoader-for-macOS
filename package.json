{
  "name": "stormloader-for-macos",
  "version": "0.3.1",
  "description": "A mod manager for Stormworks on macOS.",
  "main": "src/main/app.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "fs-extra": "^11.2.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.yourcompany.stormloader-for-macos",
    "productName": "StormLoader for macOS",
    "copyright": "Copyright Â© 2025 HariBote1110",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!build/icon.*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}